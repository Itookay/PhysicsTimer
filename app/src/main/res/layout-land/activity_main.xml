<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <SurfaceView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/svMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible" android:id="@+id/SettingButton">
        <Button
            android:text="設定"
            android:layout_width="72dp"
            android:layout_height="72dp" android:id="@+id/btSetting" android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible" android:id="@+id/StopTimerButton">
        <Button
            android:text="Num"
            android:layout_width="72dp"
            android:layout_height="72dp" android:id="@+id/btStopTimer" android:layout_margin="10dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <!-- Numpad -->
    <TableLayout
        android:id="@+id/NumPad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/svMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/StopTimerButton">

        <TableRow
            android:id="@+id/tr1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btNum1"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="1" />

            <Button
                android:id="@+id/btNum2"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="2" />

            <Button
                android:id="@+id/btNum3"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="3" />
        </TableRow>

        <TableRow
            android:id="@+id/tr2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btNum4"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="4" />

            <Button
                android:id="@+id/btNum5"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="5" />

            <Button
                android:id="@+id/btNum6"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="6" />
        </TableRow>

        <TableRow
            android:id="@+id/tr3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btNum7"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="7" />

            <Button
                android:id="@+id/btNum8"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="8" />

            <Button
                android:id="@+id/btNum9"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="9" />
        </TableRow>

        <TableRow
            android:id="@+id/tr4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btSpace1"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btNum0"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:text="0" />

            <Button
                android:id="@+id/btSpace2"
                style="@style/NumpadButton"
                android:background="@drawable/numpad_state"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />
</androidx.constraintlayout.widget.ConstraintLayout>