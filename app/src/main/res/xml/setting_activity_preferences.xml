<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:key="design_category"
        app:title="@string/preference_category_design">

        <!-- フォントリスト -->
        <Preference
            app:key="@string/preference_key_font_list"
            app:title="@string/preference_font"/>

        <Preference
            app:key="activity"
            app:title="@string/preference_style">

            <intent
                android:targetPackage="itookay.android.org"
                android:targetClass="itookay.android.org.setting.StyleSettingActivity" />
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notification_category"
        app:title="@string/preference_category_notification">

        <!-- サウンドリスト -->
        <Preference
            app:key="@string/preference_key_ringtone_list"
            app:title="@string/preference_sound"/>

        <!-- バイブレーションパターン -->
        <Preference
            app:key="@string/preference_key_vibration"
            app:title="@string/preference_vibration">
        </Preference>

        <!-- アラーム動作時間 -->
        <Preference
            app:key="@string/preference_key_alarm_active_time"
            app:title="@string/preference_alarm_active_time"/>


    </PreferenceCategory>

    <PreferenceCategory
        app:key="background_category"
        app:title="@string/preference_category_background">

        <ListPreference
            app:key="background_notification"
            app:title="@string/preference_background_notification">

        </ListPreference>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
